@{
    Layout = null;
}

@model Cement.Web.Controllers.TestController.CementPage

<!DOCTYPE html>

<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>{{ title }}</title>
        <script type="text/javascript" src="@Url.Content("~/Scripts/require.js")"></script>
        <script type="text/javascript" src="@Url.Content("~/Scripts/cement/require.config.js")"></script>
        <script type="text/javascript">
            require(['angular', 'cement/portal/app'], function (angular, app) {
                console.log('staring...');
                app.constant('TemplateUrl', '@Model.PageTemplate');
                var html = document.getElementsByTagName('html');
                angular.bootstrap(html, ['cement.portal.app']);
            }, function(error) {
                console.log('error', error);
            });
        </script>
    </head>
    <body>
        <div>
            <a href="/Home">Home</a> |
            <a href="/About">About</a> |

            <ng-view></ng-view>
        </div>
    </body>
</html>
